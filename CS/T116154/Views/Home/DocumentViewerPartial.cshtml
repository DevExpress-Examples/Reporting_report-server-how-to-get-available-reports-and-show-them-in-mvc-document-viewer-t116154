@using T116154.Controllers
@model int
@Html.DevExpress().DocumentViewer(
    settings => {
        settings.Name = "DocumentViewer";
        settings.SettingsRemoteSource.AuthenticationType = DevExpress.ReportServer.Printing.AuthenticationType.Guest;
        //settings.SettingsRemoteSource.RequestCredentials += ((HomeController)ViewContext.Controller).OnRequestCredentials;
        settings.SettingsRemoteSource.ReportId = Model;
        settings.SettingsRemoteSource.ServerUri = HomeController.ServerAddress;
        settings.CallbackRouteValues = new { Controller = "Home", Action = "DocumentViewerPartial", ReportID = Model };
        settings.ExportRouteValues = new { Controller = "Home", Action = "DocumentViewerExport", ReportID = Model };
    }).GetHtml()
